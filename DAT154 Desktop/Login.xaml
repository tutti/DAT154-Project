<Page x:Class="DAT154_Desktop.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DAT154_Desktop"
      mc:Ignorable="d" d:DesignWidth="300"
      Title="Login" d:DesignHeight="150">

    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Text="Front desk login"></TextBlock>
        <Label Margin="10,0" Content="Username"></Label>
        <TextBox Margin="10,0" Name="usernameInput"></TextBox>
        <Label Margin="10,0" Content="Password"></Label>
        <PasswordBox Margin="10,0" Name="passwordInput"></PasswordBox>
        <Button Margin="10,10" Name="loginButton" Content="Log in"></Button>
    </StackPanel>
</Page>
